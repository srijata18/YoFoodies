<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_customPagerLayout"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_background_colourless"
    android:backgroundTint="@android:color/darker_gray">

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="label"
        android:textColor="@android:color/white"
        android:fontFamily="casual"
        style="@style/TextAppearance.AppCompat.Caption"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@drawable/rounded_background_colourless_rightfold"
        android:layout_marginTop="8dp"
        android:elevation="2dp"
        android:backgroundTint="@android:color/holo_red_dark"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_marginStart="12dp"
        android:text="Epic deals"
        android:textAllCaps="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:maxLines="2"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        style="@style/TextAppearance.AppCompat.Caption"
        android:textStyle="bold"
        android:textSize="35dp"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_offer"
        android:layout_marginStart="12dp"
        android:text="40% off"
        android:textAllCaps="true"
        android:layout_marginBottom="4dp"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="14dp"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_subTitle"
        android:layout_marginStart="12dp"
        android:text="* On legenary Restaurants"
        android:layout_marginBottom="8dp"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="10dp"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
