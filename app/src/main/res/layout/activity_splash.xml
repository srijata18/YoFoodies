<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_splash_main">

    <TextView
        android:id="@+id/splash_text_title1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideLineSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_50dp"
        android:text="@string/splash_title_1"
        android:textColor="#3B5901"
        android:fontFamily="cursive"
        android:background="@android:color/transparent"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/splash_text_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#3B5901"
        app:layout_constraintTop_toBottomOf="@+id/guideLineSplash"
        android:textSize="@dimen/dimen_50dp"
        android:text="@string/splash_title_2"
        android:fontFamily="casual"
        android:background="@android:color/transparent"
        android:textStyle="bold"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/splash_loader"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:alpha="0.3"
        android:backgroundTint="#CDDC39"
        android:backgroundTintMode="multiply"
        android:scaleType="fitXY"
        />

    <com.agrawalsuneet.dotsloader.loaders.TashieLoader
        android:id="@+id/splash_loader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tashieloader_animDelay="10"
        app:tashieloader_animDur="1000"
        app:tashieloader_dotsColor="@android:color/holo_green_light"
        app:tashieloader_dotsDist="5dp"
        app:tashieloader_dotsRadius="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        app:tashieloader_interpolator="@android:anim/accelerate_interpolator"
        app:tashieloader_noOfDots="10" />
</androidx.constraintlayout.widget.ConstraintLayout>
